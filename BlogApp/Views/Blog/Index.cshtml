@model BlogApp.Models.BlogViewModel

<div class="container mt-4">
    <!-- Blog Başlığı -->
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4">@Model.Title</h1>
            <p class="text-muted">
                by <strong>
                    <a asp-controller="Profile" asp-action="Index" asp-route-username="@Model.AuthorUsername" class="text-muted">
                        @Model.AuthorUsername
                    </a>
                </strong> on @Model.CreatedDate.ToString("MMMM dd, yyyy")
            </p>
            <hr />
        </div>
    </div>

    <!-- Blog İçeriği -->
    <div class="row">
        <div class="col-12">
            <div class="blog-content">
                <p>@Model.Content</p>
            </div>
        </div>
    </div>

    <hr />
        <div class="row mt-4">
        <div class="col-12">
    <form asp-action="AddComment" method="post">
        <div class="input-group">
            <textarea class="form-control" id="commentContent" name="Content" rows="1" required placeholder="Your comment..."></textarea>
            <button type="submit" class="btn btn-primary">Submit Comment</button>
        </div>
        <!-- BlogId'yi formda gizli bir input olarak gönderiyoruz -->
        <input type="hidden" name="BlogId" value="@Model.Id" />
        
    </form>
</div>
    </div>
    <!-- Yorumlar Bölümü -->
    <div class="row mt-4">
        <div class="col-12">
            <h3>Comments</h3>

            @if (Model.Comments != null && Model.Comments.Count > 0)
            {
                @foreach (var comment in Model.Comments)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-controller="Profile" asp-action="Index" asp-route-username="@comment.AuthorUsername" class="text-muted">
                                    @comment.AuthorUsername
                                </a>
                            </h5>
                            <p class="card-text">@comment.Content</p>
                            <p class="card-text"><small class="text-muted">Posted on @comment.CreatedDate.ToString("MMMM dd, yyyy")</small></p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No comments yet. Be the first to comment!</p>
            }
        </div>
    </div>
</div>

