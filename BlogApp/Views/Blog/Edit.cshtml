@model BlogApp.Models.BlogViewModel

@{
    ViewData["Title"] = "Edit Blog";
}

<div class="container mt-4">
    <h2>Edit Blog</h2>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Title">Title</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        </div>

        <div class="form-group mt-3">
            <label for="Content">Content</label>
            <textarea class="form-control" id="Content" name="Content" rows="5" required>@Model.Content</textarea>
        </div>

        <div class="form-group mt-3">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option value="">Select a category</option>
                <!-- Kategorileri burada doldurmak için ViewBag kullanıyoruz -->
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input type="checkbox" asp-for="IsDraft" class="form-check-input" />
            <label class="form-check-label" asp-for="IsDraft">Draft?</label>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
        <a asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
