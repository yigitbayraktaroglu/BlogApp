@using System.Security.Claims
@model BlogApp.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profile - " + @Model.Name;
}

<div class="container py-4">
    <div class="row">
        <!-- Sol taraf: Kullanıcı bilgileri -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="text-muted">@Model.Username</p>
                </div>
                @if (User.FindFirstValue(ClaimTypes.NameIdentifier) == Model.Id)
                {
                    <div class="card-footer text-center">
                        <a asp-controller="Blog" asp-action="Create" class="btn btn-primary w-100 mb-2">Create New Blog</a>
                        <a asp-controller="Profile" asp-action="Edit" asp-route-username="@Model.Username" class="btn btn-secondary w-100">Edit Profile</a>
                    </div>
                }
            </div>
        </div>

        <!-- Sağ taraf: Kullanıcının blogları -->
        <div class="col-lg-9 col-md-8">
            <h4>@Model.Name's Blogs</h4>
            @if (Model.Blogs != null && Model.Blogs.Any())
            {
                @Html.Partial("_BlogListPartial", Model.Blogs)
            }
            else
            {
                <p>No blogs available.</p>
            }
        </div>
    </div>
</div>

<style>
    @@media (max-width: 576px) {
        .card-footer a {
            margin-bottom: 10px;
        }
    }
</style>
