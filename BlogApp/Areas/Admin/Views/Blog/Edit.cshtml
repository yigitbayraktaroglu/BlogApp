@model BlogApp.Areas.Admin.Models.BlogViewModel

@{
    ViewData["Title"] = "Edit Blog";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="Title">Title</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        </div>

        <div class="form-group mt-3">
            <label for="Content">Content</label>
            <textarea class="form-control" id="Content" name="Content" rows="5" required>@Model.Content</textarea>
        </div>

        <div class="form-group mt-3">
            <label asp-for="CategoryId" class="control-label">Category</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option value="">Select a category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group form-check mt-3">
            <input type="checkbox" asp-for="IsDraft" class="form-check-input" />
            <label class="form-check-label" asp-for="IsDraft">Draft?</label>
        </div>


        <div class="form-group mt-3">
            <label for="Highlight">Highlight</label>
            <input type="number" class="form-control" id="Highlight" name="Highlight" value="@Model.Highlight" required />
        </div>

        <div class="form-group mt-3">
            <label>Created Date: </label>
            <span>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</span>
        </div>

        <div class="form-group mt-3">
            <label>Last Updated Date: </label>
            <span>@Model.UpdatedDate.ToString("dd/MM/yyyy HH:mm")</span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
        <a asp-controller="Admin" asp-action="Blog" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
