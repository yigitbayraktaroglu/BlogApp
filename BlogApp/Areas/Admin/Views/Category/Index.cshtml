@model List<BlogApp.Areas.Admin.Models.CategoryViewModel>

<h2>Categories</h2>
<div class="mb-3">
   
    <form asp-action="Create"  id="name" method="post" class="form-inline">
        <div class="input-group">
            <input type="text" id="name" name="name" class="form-control" placeholder="Enter category name" required />
            <button type="submit" class="btn btn-success ml-2">Create Category</button>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Created Date</th>
            <th>Updated Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>
                    <form asp-action="Update" method="post" class="form-inline">
                        <input type="hidden" asp-for="@category.Id" />
                        <input type="hidden" name="Id" value="@category.Id" />
                        <div class="input-group">
                            <input type="text" name="Name" class="form-control" value="@category.Name" />
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </td>
                <td>@category.CreatedDate.ToString("g")</td>
                <td>@category.UpdatedDate.ToString("g")</td>
                <td>
                        <button class="btn btn-danger" onclick="deleteCategory(@category.Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
      function deleteCategory(categoryId) {
        if (confirm('Are you sure you want to delete this blog?')) {
            fetch(`/Admin/Category/Delete?id=${categoryId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': $('input[name="__RequestVerificationToken"]').val() // Ensure CSRF token is included
                }
            })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Error deleting category.');
                    }
                })
                .catch(error => console.error('Error:', error));
        }
    }

</script>
